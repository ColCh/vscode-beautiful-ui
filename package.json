{
    "name": "beautiful-ui",
    "displayName": "Beautiful UI",
    "description": "A set of beautiful color themes for VSCode, inspired by Sublime DA UI.",
    "version": "0.0.1",
    "publisher": "swashata",
    "engines": {
        "node": ">=8.6.0",
        "vscode": "^1.22.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Beautiful UI - Tomorrow Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/Tomorrow Dark-color-theme.json"
            },
            {
                "label": "Beautiful UI - Tomorrow Light",
                "uiTheme": "vs",
                "path": "./themes/Tomorrow Light-color-theme.json"
			},
			{
                "label": "Beautiful UI - One Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/One Dark-color-theme.json"
			},
			{
                "label": "Beautiful UI - One Light",
                "uiTheme": "vs",
                "path": "./themes/One Light-color-theme.json"
            },
            {
                "label": "Beautiful UI - Eighties Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/Eighties Dark-color-theme.json"
            }
        ]
    },
    "license": "MIT",
    "author": {
        "name": "Swashata Ghosh",
        "email": "swashata4u@gmail.com",
        "url": "https://swashata.me"
    },
    "devDependencies": {
        "chalk": "^2.4.1",
        "chokidar-cli": "^1.2.0",
        "color": "^3.0.0",
        "eslint": "^4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.11.0",
        "eslint-plugin-prettier": "^2.6.0",
        "lodash": "^4.17.10",
        "ora": "^2.1.0",
        "prettier": "^1.12.1"
    },
    "scripts": {
        "build": "node ./script/generateTheme.js",
        "start": "yarn build && chokidar 'src/**' 'script/**' -c 'yarn build'"
    }
}
